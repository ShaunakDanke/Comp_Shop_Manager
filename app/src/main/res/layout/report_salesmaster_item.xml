<!-- item_receipt_products.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Customer id -->
    <TextView
        android:id="@+id/txtCustomerId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="15sp"
        android:padding="4dp"
        android:textColor="@android:color/black" />

    <!-- Customer name -->
    <TextView
        android:id="@+id/txtCustomerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:padding="4dp"
        android:textColor="@android:color/black" />

    <!-- Customer contact -->
    <TextView
        android:id="@+id/txtCustomerContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:padding="4dp"
        android:textColor="@android:color/black" />

    <!-- Date of purchase -->
    <TextView
        android:id="@+id/txtDateofPurchase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:padding="4dp"
        android:textColor="@android:color/black" />

    <!-- GST -->
    <TextView
        android:id="@+id/txtGST"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:padding="4dp"
        android:textColor="@android:color/black" />

    <!-- Final Amount -->
    <TextView
        android:id="@+id/txtFinalAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:padding="4dp"
        android:textColor="@android:color/black" />

</LinearLayout>
